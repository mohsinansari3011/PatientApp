<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logopic"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_below="@+id/text_gallery"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@mipmap/ic_launcher_round"


        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logopic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Patient Name"
        android:textColor="#003B49"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:text="E-mail"
        android:textColor="#003B49"
        android:textSize="23dp" />

    <ImageView
        android:id="@+id/contact"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_below="@id/email"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_phone_black_24dp" />


    <TextView
        android:id="@+id/contacttxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/contact"
        android:padding="10dp"
        android:text="Contact"
        android:textColor="#003B49"
        android:textSize="23dp" />


    <EditText
        android:id="@+id/editcontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contacttxt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/contact"
        android:padding="5dp"
        android:text="Contact#"
        />
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:id="@+id/contactedit"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/contact"

        android:background="@drawable/ic_edit"
        />

    <ImageView
        android:id="@+id/caretaker"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_below="@+id/editcontact"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/doctor" />


    <TextView
        android:id="@+id/doctxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editcontact"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/caretaker"
        android:padding="10dp"
        android:text="Caretaker Name"
        android:textColor="#003B49"
        android:textSize="23dp" />

    <EditText
        android:id="@+id/editcaretaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doctxt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/caretaker"
        android:padding="5dp"
        android:text="Caretaker" />
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:id="@+id/ctedit"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/caretaker"
        android:background="@drawable/ic_edit"
        />


    <Button
        android:id="@+id/login"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_below="@id/doctxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/btntheme"

        android:text="Update"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textDirection="firstStrong"
        android:textSize="20dp"
        android:textStyle="normal" />

</RelativeLayout>