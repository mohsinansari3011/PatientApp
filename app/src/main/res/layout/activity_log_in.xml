<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInActivity">

    <ImageView
        android:id="@+id/logopic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo"/>
    <TextView
        android:id="@+id/logintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logopic"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:textSize="30dp"
        android:textColor="#003B49"
        />
    <ImageView
        android:id="@+id/usernamepic"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_width="50dp"
        android:layout_below="@id/logintext"
        android:layout_marginTop="30dp"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"/>
    <EditText
        android:id="@+id/usernametxt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Username"
        android:layout_toRightOf="@+id/usernamepic"
        android:layout_below="@+id/logintext"
        android:textColor="#003B49"
        android:layout_marginTop="30dp"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="20dp"
        android:padding="10dp"

        android:background="@drawable/txtdesign"/>
    <ImageView
        android:id="@+id/passwordpic"
        android:src="@drawable/ic_vpn_key_black_24dp"
        android:layout_width="50dp"
        android:layout_below="@id/usernamepic"
        android:layout_marginTop="30dp"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"/>
    <EditText
        android:id="@+id/passwordtxt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Password"
        android:layout_toRightOf="@+id/passwordpic"
        android:layout_below="@+id/usernametxt"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textColor="#003B49"
        android:padding="10dp"
        android:inputType="textPassword"
        android:background="@drawable/txtdesign"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgetpasswordtxt"
        android:text="Forget Password?"
        android:textColor="#003B49"
        android:textSize="19dp"
        android:layout_below="@id/passwordtxt"
        android:layout_toRightOf="@id/passwordpic"
        android:onClick="reset"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp" />




    <Button
        android:id="@+id/login"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_below="@id/forgetpasswordtxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/btntheme"
        android:onClick="Login"
        android:text="log In"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textDirection="firstStrong"
        android:textSize="20dp"
        android:textStyle="normal" />
    <TextView
        android:id="@+id/creatNewOnetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New User? Create an account"
        android:textColor="#003B49"
        android:textSize="19dp"
        android:onClick="signUp"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"

        />

</RelativeLayout>